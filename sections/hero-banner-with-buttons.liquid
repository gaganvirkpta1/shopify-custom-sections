{% schema %}
{
  "name": "Hero Banner with Buttons",
  "tag": "section",
  "class": "hero-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore our latest collection"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary Button Label",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner with Buttons"
    }
  ]
}
{% endschema %}

<div class="hero-banner" style="background-image: url({{ section.settings.background_image | image_url }});">
  <div class="overlay">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    {% if section.settings.primary_button_link %}
      <a href="{{ section.settings.primary_button_link }}" class="btn">{{ section.settings.primary_button_label }}</a>
    {% endif %}
  </div>
</div>

<style>
.hero-banner {
  background-size: cover;
  background-position: center;
  padding: 100px 20px;
  text-align: center;
  color: white;
  position: relative;
}
.hero-banner .overlay {
  background: rgba(0,0,0,0.4);
  padding: 60px 20px;
  border-radius: 12px;
}
.hero-banner h1 {
  font-size: 3rem;
  margin-bottom: 10px;
}
.hero-banner p {
  font-size: 1.25rem;
}
.hero-banner .btn {
  margin-top: 20px;
  display: inline-block;
  background: #ffffff;
  color: #000000;
  padding: 12px 30px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: bold;
}
</style>
